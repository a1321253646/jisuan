<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:background="@drawable/account_header_bg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:src="@drawable/icon_back_grey"
                android:id="@+id/addrecord_back"
                android:clickable="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_detail_context"
                android:text="记一笔"
                android:id="@+id/addrecord_text"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@drawable/abc_ic_cab_done_holo_dark"
                android:id="@+id/addrecord_save"
                android:clickable="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_addrecord_out"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/text_record_out"
                android:textSize="@dimen/text_size_year"
                android:enabled="true"
                android:clickable="true"
                android:gravity="center"
                android:textColor="#333333"/>
            <TextView
                android:id="@+id/tv_addrecord_int"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/text_addrecord_int"
                android:textSize="@dimen/text_size_year"
                android:enabled="true"
                android:clickable="true"
                android:gravity="center"
                android:textColor="#333333"/>
            <TextView
                android:id="@+id/tv_addrecord_stock_out"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/text_addrecord_stock_out"
                android:textSize="@dimen/text_size_year"
                android:enabled="true"
                android:clickable="true"
                android:gravity="center"
                android:textColor="#333333"/>
            <TextView
                android:id="@+id/tv_addrecord_stock_in"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/text_addrecord_stock_in"
                android:textSize="@dimen/text_size_year"
                android:enabled="true"
                android:clickable="true"
                android:gravity="center"
                android:textColor="#333333"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/camera_btn"
            android:id="@+id/addrecord_camera"
            android:layout_alignParentRight="true"/>
        <EditText
            android:id="@+id/addrecord_cost"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/addrecord_camera"
            android:textColor="#00ff00"
            android:textSize="@dimen/text_size_mon"
            android:gravity="center"
            android:background="#aaaaaa"
            android:text="0.00"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/addrecord_spinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/addrecord_newtype"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/addrecord_camera"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_year"
            android:gravity="center"
            android:background="#aaaaaa"
            android:hint="输入新的类型" />
    </LinearLayout>
    <EditText
        android:id="@+id/addrecord_type_price"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textSize="@dimen/text_size_year"
        android:textColor="#000000"
        android:background="#aaaaaa"
        android:hint="单价"/>
    <EditText
        android:id="@+id/addrecord_remark"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textSize="@dimen/text_size_year"
        android:textColor="#000000"
        android:background="#aaaaaa"
        android:hint="备注"/>
    <ImageView
        android:id="@+id/addrecord_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:visibility="invisible"/>
</LinearLayout>