<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/account_header_bg"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_history_mom"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#ff0000"
                    android:text="12"
                    android:gravity="bottom"
                    android:textSize="@dimen/text_size_mon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:text="/"
                    android:gravity="bottom"
                    android:textSize="@dimen/text_size_mon"/>
                <TextView
                    android:id="@+id/text_history_year"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:text="2017"
                    android:gravity="bottom"
                    android:textSize="@dimen/text_size_year"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:text="本月收入"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/text_size_history"/>
                <TextView
                    android:id="@+id/text_history_income"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:text="88888.88"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_size_history"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:text="本月支出"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/text_size_history"/>
                <TextView
                    android:id="@+id/text_history_outcome"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:text="88888.88"
                    android:textSize="@dimen/text_size_history"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:text="本月库存价值"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/text_size_history"/>
                <TextView
                    android:id="@+id/text_history_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:text="88888.88"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_size_history"/>
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@mipmap/ic_launcher"/>
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/account_header_bg"
        android:gravity="center"
        android:text="@string/add_history"
        android:textColor="#fff"
        android:textSize="@dimen/text_size_add" />

    <Button
        android:id="@+id/chengbeng_bt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/account_header_bg"
        android:gravity="center"
        android:text="计算成本"
        android:textColor="#fff"
        android:textSize="@dimen/text_size_add" />

<!--    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_history">
    </ListView>-->

</LinearLayout>
